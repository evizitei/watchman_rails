%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :password
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label :phone
    %i (use the phone number where you want to receive SMS messages)
    %i (format: 1-XXX-XXX-XXXX)
    %br/
    = f.text_field :phone
  %p
    = f.label :organization_id, "Organization Id"
    %i (You must have an active organization ID to subscribe)
    %br/
    = f.text_field :organization_id
  %p
    = f.label :is_sms_subscriber,"get SMS alerts:"
    %br
    =f.check_box :is_sms_subscriber
  %p
    = f.label :is_email_subscriber,"get Email alerts:"
    %br
    =f.check_box :is_email_subscriber
  %p= f.submit "Sign up"
= render :partial => "devise/shared/links"
